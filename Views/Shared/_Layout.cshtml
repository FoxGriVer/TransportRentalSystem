<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render( "~/Content/css" )
    @Scripts.Render( "~/bundles/modernizr" )
    
    @RenderSection( "headtag", false )
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--@Html.ActionLink("CarRenting", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                -->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--<li>@Html.ActionLink("Бронирование автомобиля", "Index", "Home")</li>-->
                    <li> @Html.ActionLink("Бронирование автомобиля", "Index", "Renting")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Сведения<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Автомобили", "Index", "Cars")</li>
                            <li>@Html.ActionLink("Водители", "Index", "Drivers")</li>

                            <li>@Html.ActionLink("Транспортные точки", "Index", "TransportPoints")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Активация / Деакивация", "Index", "Activation")</li>

                        </ul>
                    </li>
                    <li>@Html.ActionLink("Журнал бронирований", "Index", "Journals")</li>
                    <li>@Html.ActionLink("Авторизация", "Index", "Authorization")</li>
                    <li><a href="#">Вы вошли как:</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-full">
        @Html.X().ResourceManager( ViewBag.ManagerConfig as MvcResourceManagerConfig )
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
